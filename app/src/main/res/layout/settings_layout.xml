<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lg_password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lg_password_1_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter__admin_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lg_password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lg_password_2_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_password_again"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lg_shared_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lg_shared_folder_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lg_ip"
            android:inputType="number"
            android:digits="0123456789." />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_save_preferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_900"
            android:text="@string/save"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_cancel_preferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@color/blue_grey_900"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>